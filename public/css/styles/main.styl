.login  a > &:first-child
    background #FFA200 !important
    max-height:  35px
    margin auto
    padding: 5px 15px
    border-radius: 25px
    color white !important
    border none
.menu-login
    top: 80px !important 
    background: #F2F2F2 !important
    -webkit-box-shadow: 10px 10px 31px 0px rgba(79,79,79,1) !important
    -moz-box-shadow: 10px 10px 31px 0px rgba(79,79,79,1) !important
    box-shadow: 10px 10px 31px 0px rgba(79,79,79,1) !important
    li
        a
            &:hover
                color: black !important
#login-form
    input[type="password"], input[type="password"] 
        background-color transparent
        border-color: #474747
        padding: 10px 
        margin: 10px 0
    input[type="submit"]
        background-color red
        margin 15px 0 0 250px
.main-admin-container
    padding 0 0 130px 0
    header         
        padding: 15px
        background-color #FFA200
        color: white
        a
            background-color white
            color #1c1c1c !important
            font-size: 14px
            padding: 10px 15px
            border-radius: 5px
            margin-right: 10px
    .projects-container
        margin-top: 130px
.logo-holder img
    max-height: 220px !important

header a.logo img
    max-height: 130px

.accordion
    border-bottom:  1px solid rgba(0,0,0,.125) !important

.loader
    background-color rgba(255,255,255,0.7)    
    justify-content: center
    position absolute
    width: 100%
    height: 100%
    align-items: center
    display none
    object
        width: 10%
        padding-bottom: 200px

.project-active
    border solid 1px #FFA200 !important
    background-color #FFA20080 !important
    color: white !important
.project-innactive
    border solid 1px #7C7C84 !important
    background-color #A4A4AB !important
    color: white !important
.aside-title:after
    background #FFA200
.btn-accept
    background-color #FFA200
    color: white
.btn-cancel
    background-color #fff
    color black

#change-status
    cursor pointer

@media(max-width 991px) 
    .logo-holder img
        max-height: 26px !important
    .logo-holder > .big-logo
        display: none !important
    .logo-holder > .display-none
        display: inline-block !important
    .logo-main-index
        display: none !important
    .logo-mini-index
        display inline-block !important
    .logo img
        max-height: 40px !important
@media(max-width 767px)
    .accordion-menu
        padding-right: 20px !important